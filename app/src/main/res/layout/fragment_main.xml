<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">


    <TextView
        android:id="@+id/textBlankWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu"
        android:textAlignment="center"
        android:textSize="39sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/codingChallenge1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/challenge_first_1_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBlankWelcome" />

    <Button
        android:id="@+id/buttonHW11"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/home_work_1_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codingChallenge1" />

    <Button
        android:id="@+id/buttonHW12"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/home_work_1_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHW11" />


    <Button
        android:id="@+id/buttonHW13"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/home_work_1_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHW12" />

</androidx.constraintlayout.widget.ConstraintLayout>